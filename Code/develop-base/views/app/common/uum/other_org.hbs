    function arrloopAndUpdateNodeText(arr,data){
        for(var i in arr){
            var tag = true;
            var x = 0;
            var y = 0;
            for(var j in data){
                if(arr[i].id.substr(0,arr[i].orgType.length) == data[j].org_type){
                    for(var k in data[j].attr_items){
                        if(data[j].attr_items[k] == arr[i].id.substr(arr[i].id.substr(0,arr[i].orgType.length).length)){
                            x += 1;
                            y += data[j].user_count?data[j].user_count:0;
                            tag = false;
                        }
                    }
                }
            }
            if(tag){
                arr[i].text = arr[i].text+'(0/0)';
            }else{
                arr[i].text = arr[i].text+'('+ x +'/'+ y +')';
            }
            if(typeof arr[i].children == 'object'){
                arrloopAndUpdateNodeText(arr[i].children);
            }
        }
    }

