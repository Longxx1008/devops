    // 关闭窗口
    function closeDialog() {
        $('#other_org_Modal').dialog('close');
    }

    // 打开页面
    function openPage(title, value, callback) {
        $('#inputOrgType').combobox({
            required:true,
            valueField:'id',
            textField:'text',
            loader:function(param,success,error){
                var result = [];
                $.each(common_org_type,function(i,n){
                    if(common_org_type[i].text == '厂家'){
                        if(common_org_type[i].children){
                            result = $.extend(true,[],common_org_type[i].children);
                        }
                    }
                });
                success(result);
            },
            onSelect:function(node){
                $('#inputOrgName').combobox({
                    url: '{{projcfg.appurl}}/admin/api/common/uum/other_org/getOrgInfo?orgType='+node.id,
                    loadFilter:function(data){
                        var arr = [];
                        for(var i=0;i<data.length;i++){
                            var o = {};
                            o.id = data[i]._id;
                            o.text = data[i].org_fullname;
                            arr.push(o);
                        }
                        return arr;
                    }
                });
                $('#inputContractTerm3').combotree({
                    loader:function(param,success,error){
                        var arr = [];
                        $.each(org_contract_term,function(i,n){
                            if(n.id == node.id){
                                arr = n.children;
                            }
                        });
                        success(arr);
                    }
                });
            }
        });
        $('#inputAreaCode').tree({
            lines:true,
            checkbox:true,
            multiple:true,
            valueField:'id',
            textField:'text',
            loader:function(param,success,error){
                success(common_area_code);
            },
            onLoadSuccess:function(node, data){
                var arrs = $(this).tree('getChecked');
                if(arrs.length > 0){
                    $.each(arrs,function(i,n){
                        $('#inputAreaCode').tree('uncheck', n.target);
                    });
                }
            }
        });
        $('#inputOrgName').combobox({
            required:true,
            method: 'get',
            valueField:'id',
            textField:'text'
        });
        $('#inputContractTerm3').combotree({
            required:true,
            editable:false
        });
        $('#other_org_Modal').show();
        $('#other_org_Modal').mydialog({
            title:title,
            width: 800,
            height: 550,
            top:150,
            modal: true,
            myButtons:[
                {
                    text:'确定',
                    btnCls:'btn btn-blue',
                    handler:function(){
                        callback(value);
                    }
                },
                {
                    text:'关闭',
                    btnCls:'btn btn-danger',
                    handler:function(){
                        closeDialog();
                    }
                }
            ]
        });
