                    type: 'delete',
                    data: {},
                    success: function (data) {
                        if(data.success) {
                            msgSuccess(data.msg);
                            $('#other_org_Tree').tree('reload');
                            initTable();
                        }
                        else {
                            msgError(data.msg+',错误代码:'+data.code);
                        }
                    }
                });
            }
        });
    }

    // 打开修改页面
    function toEdit() {
        // 获得选择行
        var rows = $('#other_org_datatable').datagrid('getChecked');
        if (rows.length != 1) {
            msgError('提示,请选择一条数据再进行修改');
