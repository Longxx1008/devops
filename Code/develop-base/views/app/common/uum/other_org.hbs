                },
                success: function (data) {
                    if (data.success) {
                        msgSuccess(data.msg);
                        closeDialog();
                        $('#other_org_Tree').tree('reload');
                        initTable();
                        clear();
                    }
                    else {
                        msgError(data.msg + ',错误代码:' + data.code);
                    }
                }
            });
        }
    }
    // 清空新增表单数据
    function clear() {
        $('#other_orgForm').form('clear');
