                        loadFilter:function(data){
                            var arr = [];
                            for(var i=0;i<data.length;i++){
                                var o = {};
                                o.id = data[i]._id;
                                o.text = data[i].org_fullname;
                                arr.push(o);
                            }
                            return arr;
                        }
                    }).combobox('setValue',data.data[0].org_id._id);
                    $('#inputContractTerm3').combotree({
                        loader:function(param,success,error){
                            var arr = [];
                            $.each(org_contract_term,function(i,n){
                                if(n.id == data.data[0].org_id.org_type){
                                    arr = n.children;
                                }
                            });
                            success(arr);
                        }
                    }).combobox('setText',new Date(data.data[0].start_time).format('yyyy.MM.dd')+"~"+new Date(data.data[0].end_time).format('yyyy.MM.dd'));
                }else{
                    msgError(data.msg+',错误代码:'+data.code);
                }
            }
        });
    }

    // 修改数据
    function doEdit(value) {
        var array = $('#inputAreaCode').tree('getChecked');
