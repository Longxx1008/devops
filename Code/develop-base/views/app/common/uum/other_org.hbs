    // 新增数据
    function doAdd(value) {
        var array = $('#inputAreaCode').tree('getChecked');
        if(array.length == 0){
            msgError('提示,请选择地区数据');
        }else{
            var arr = [];
            for(var i in array){
                arr.push(array[i].id);
            }
            var validate = $('#other_orgForm').form('validate');
            if(!validate) {
                return false;
            }
            $.ajax({
                url: '{{projcfg.appurl}}/admin/api/common/uum/other_org',
                type: 'post',
                data: {
                    org_id:$('#inputOrgName').combobox('getValue'),
                    contract_term:$('#inputContractTerm3').combotree('getText'),
                    attr_items:arr.join("#")
                },
                success: function (data) {
                    if(data.success) {
                        msgSuccess(data.msg);
                        closeDialog();
                        $('#other_org_Tree').tree('reload');
                        initTable();
                        clear();
                    }
                    else {
                        msgError(data.msg+',错误代码:'+data.code);
                    }
                }
            });
        }
    }

    //删除数据
    function doDel(){
        var rows = $('#other_org_datatable').datagrid('getChecked');
